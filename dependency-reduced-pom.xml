<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.pluralsight</groupId>
  <artifactId>DELI-cious-sandwiches</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <compress>2</compress>
          <noHeaderFiles>true</noHeaderFiles>
          <stripDebug>true</stripDebug>
          <noManPages>true</noManPages>
          <launcher>delicious</launcher>
          <mainClass>com.pluralsight.utils.gui.AppMain</mainClass>
          <jlinkImageName>delicious-runtime</jlinkImageName>
          <jlinkZipName>delicious-runtime-zip</jlinkZipName>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.pluralsight.Main</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.1.0</version>
        <configuration>
          <mainClass>com.pluralsight.utils.gui.AppMain</mainClass>
          <arguments>
            <argument>--module-path</argument>
            <argument>${javafx.version}</argument>
            <argument>--add-modules</argument>
            <argument>javafx.controls,javafx.fxml,javafx.graphics</argument>
          </arguments>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.panteleyev</groupId>
        <artifactId>jpackage-maven-plugin</artifactId>
        <version>1.6.0</version>
        <configuration>
          <name>DELIcious-Sandwiches</name>
          <appVersion>1.0.0</appVersion>
          <vendor>AliSandwichShop</vendor>
          <destination>target/dist</destination>
          <mainClass>com.pluralsight.utils.gui.AppMain</mainClass>
          <input>target</input>
          <type>APP_IMAGE</type>
          <javaOptions>
            <option>--module-path</option>
            <option>${javafx.version}</option>
            <option>--add-modules</option>
            <option>javafx.controls,javafx.fxml,javafx.graphics</option>
          </javaOptions>
          <macPackageIdentifier>com.alisandwichshop.delicious</macPackageIdentifier>
          <macPackageName>DELIcious-Sandwiches</macPackageName>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>17</maven.compiler.target>
    <javafx.modules.path>${java.home}/lib</javafx.modules.path>
    <maven.test.skip>true</maven.test.skip>
    <maven.compiler.source>17</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>20</javafx.version>
  </properties>
</project>
